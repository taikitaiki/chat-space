.message
  .message-upper
    .message-upper__user-name
      = message.user.name
    / .message-upper__time
    /   = format_posted_time(message.created_at)
  .message-lower
    - if message.content.present?
      %p.message-lower__text
        = message.content
    = image_tag message.image.url, class: 'message-lower__image' if message.image.present?
